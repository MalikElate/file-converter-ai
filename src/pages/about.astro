---
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
import BlogAvatar from "../components/ui/BlogAvatar.tsx"
---

<Layout title="RFT - about">
    <article class="max-w-2xl mx-auto px-4 py-8">
        <header>
            <h1 class="text-4xl font-bold mb-2">About</h1>
            <div class="flex items-center space-x-4">
                <BlogAvatar client:load />
                <div>
                    <p class="text-sm font-medium">Bed</p>
                    <p class="text-sm text-muted-foreground">{"2024-10-01"}</p>
                </div>
            </div>
        </header>
        <section class="prose about-section">
            <h2>How it works</h2>
            <span>1. Select a file, enter your email and a recipient email</span>
            <span>2. Your file is uploaded</span>
            <span>
                3. A download link is sent from woodskullcontent@gmail.com
            </span>
            <span>
                4. Please contact the support email if you have any issues
            </span>
            <h2 class="mt-4">Privacy</h2>
            <span>
                Info is used only for sending your files and is not shared with
                third parties.
            </span>
            <span>Files are stored in AWS s3 and deleted after 1 week</span>
            <span>
                The only personal data collected is the sender and receiver
                email addresses through the form
            </span>
            <span>There are no cookies or cross-site tracking.</span> 
        </section>
        <!-- <footer class="border-t pt-8">
          <div class="flex justify-between items-center">
            <Button variant="outline">← Previous Post</Button>
            <Button variant="outline">Next Post →</Button>
          </div>
        </footer>
      </article> -->
    </article>

    <style>
        main {
            margin: auto;
            padding: 1rem;
            width: 800px;
            max-width: calc(100% - 2rem);
            font-size: 20px;
            line-height: 1.6;
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        .about-section {
            min-width: 300px;
            width: 100%;
            max-width: 980px;
            margin: 0 auto;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 1rem;
            padding: 2rem 0.5rem;
            text-align: left;
        }
        h2 {
            align-self: flex-start;
            font-size: 1.25rem;
            font-weight: bold;
            line-height: 1.1;
            letter-spacing: -0.025em;
        }
        span {
            align-self: flex-start;
            text-align: left;
            color: #666;
            font-size: 0.875rem;
            max-width: 100%;
            word-wrap: break-word;
            overflow-wrap: break-word;
            hyphens: auto;
        }
        h1:nth-of-type(2) {
            margin-top: 30px;
        }
        @media (min-width: 768px) {
            .about-section {
                padding: 3rem 0.5rem 2rem;
            }
            h1 {
                font-size: 1.5rem;
            }
        }
        @media (min-width: 1024px) {
            .about-section {
                padding: 3rem 0.5rem 5rem;
            }
        }
    </style>
</Layout>
