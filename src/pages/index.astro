---
import Layout from "../layouts/Layout.astro";
import UploadForm from "../components/uploadform.tsx";
import "../styles/global.css";

const signUpRedirectUrl = import.meta.env.PUBLIC_CLERK_SIGN_UP_REDIRECT_URL;
console.log("Redirect URL:", signUpRedirectUrl);
---

<Layout title="File Converter AI">
  <main>
    <div class="hero">
      <h1>File Converter AI</h1>
      <div class="sub-header">
        I made this because I needed a simple way to share my youtube video
        rough drafts with editors - <a href="https://twitter.com/skull_wooden"
          >@skull_wooden</a
        >
      </div>
      <UploadForm client:load />
    </div>
  </main>
</Layout>

<script>
  const getThemePreference = () => {
    if (typeof localStorage !== "undefined" && localStorage.getItem("theme")) {
      return localStorage.getItem("theme");
    }
    return window.matchMedia("(prefers-color-scheme: dark)").matches
      ? "dark"
      : "light";
  };
  const isDark = getThemePreference() === "dark";
  document.documentElement.classList[isDark ? "add" : "remove"]("dark");

  if (typeof localStorage !== "undefined") {
    const observer = new MutationObserver(() => {
      const isDark = document.documentElement.classList.contains("dark");
      localStorage.setItem("theme", isDark ? "dark" : "light");
    });
    observer.observe(document.documentElement, {
      attributes: true,
      attributeFilter: ["class"],
    });
  }
</script>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    font-size: 20px;
    line-height: 1.6;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  h1 {
    text-align: center;
    font-size: 1.875rem;
    font-weight: bold;
    line-height: 1.25;
    letter-spacing: -0.025em;
  }
  @media (min-width: 768px) {
    h1 {
      font-size: 3.75rem;
    }
  }
  @media (min-width: 1024px) {
    h1 {
      line-height: 1.1;
    }
  }
  .hero {
    position: relative;
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100%;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    border-radius: 0.5rem;
    background-color: var(--background);
  }
  .sub-header {
    text-align: center;
    font-size: 1rem;
    color: #666;
    margin-top: 1rem;
    margin-bottom: 2rem;
    max-width: 500px;
  }
  .sub-header a {
    color: #0077cc;
    text-decoration: none;
  }
  .sub-header a:hover {
    text-decoration: underline;
  }
</style>
